<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <%= render "shared/user_info" %>
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="avatars">
              <% @users.each do |user| %>
                <%= link_to gravatar_for(user, size: 30), user %>
              <% end %>
            </div>
          </div>
      </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>