<% provide(:title, "가입") %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(@user, url: signup_path) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-group">
            <%= f.label :name, "이름" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :email, "이메일" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :password, "비밀번호" %>
            <%= f.password_field :password, class: "form-control", required: true %>
            <p class="help-block">비밀번호는 4글자 이상 입력해 주세요.</p>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "비밀번호 확인" %>
            <%= f.password_field :password_confirmation, class: "form-control", required: true %>
          </div>
          <%= f.submit "가입", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="right">계정이 있다면 <%= link_to "로그인", login_path, class: "btn btn-md btn-primary btn-outline" %></div>
  </div>
</div>
