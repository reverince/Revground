<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for(@microposts) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.text_area :content, placeholder: "내용을 입력하세요" %>
      </div>
      <%= f.submit "게시", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
